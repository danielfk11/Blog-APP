<h1>Resetar Senha</h1>

<%= form_with model: @user, url: reset_password_path, local: true do |form| %>
  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit 'Resetar Senha' %>
<% end %>
