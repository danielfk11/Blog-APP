<h1><%= t('posts.new.title') %></h1>

<%= form_with(model: @post, url: posts_path) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('posts.new.error_count_message', count: @post.errors.count) %></h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('posts.new.title_label') %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, t('posts.new.content_label') %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :tag_ids, t('posts.new.tags_label') %>
    <%= form.collection_select :tag_ids, Tag.all, :id, :name, {}, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :tag_names, t('posts.new.tags_label') %>
    <%= form.text_field :tag_names, class: 'form-control', placeholder: t('posts.new.tags_placeholder') %>
  </div>

  <div class="actions">
    <%= form.submit t('posts.new.create_button') %>
  </div>
<% end %>

<%= link_to t('posts.new.back_link'), posts_path %>
