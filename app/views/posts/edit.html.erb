<h2><%= t('posts.edit.title') %></h2>

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t('posts.edit.error_title') %></h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, t('posts.edit.title_label') %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, t('posts.edit.content_label') %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <%= form.submit t('posts.edit.submit_button'), class: 'btn btn-primary' %>
<% end %>
