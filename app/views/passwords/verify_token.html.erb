<div style="text-align: center; margin-bottom: 30px;">
  <h2 style="font-size: 24px; color: #333; margin-bottom: 20px;"><%= t('passwords.verify_token.title') %></h2>

  <%= form_tag validate_token_path, style: "max-width: 400px; margin: 0 auto;" do %>
    <div style="margin-bottom: 20px;">
      <%= label_tag :email, t('passwords.verify_token.email_label'), style: "display: block; font-weight: bold; color: #333; margin-bottom: 10px;" %>
      <%= text_field_tag :email, params[:email], class: 'form-control', style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= label_tag :token, t('passwords.verify_token.token_label'), style: "display: block; font-weight: bold; color: #333; margin-bottom: 10px;" %>
      <%= text_field_tag :token, params[:token], class: 'form-control', style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;" %>
    </div>

    <%= submit_tag t('passwords.verify_token.submit_button'), class: 'btn btn-primary', style: "background-color: #1da1f2; color: #fff; padding: 12px 20px; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; transition: background-color 0.3s ease; width: 100%;" %>
  <% end %>
</div>
