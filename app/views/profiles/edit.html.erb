<h1><%= t('profiles.edit.title') %></h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, t('profiles.edit.error')) %> <%= t('profiles.edit.prohibited') %>:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, t('profiles.edit.username_label') %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email, t('profiles.edit.email_label') %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone_number, t('profiles.edit.phone_label') %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.submit t('profiles.edit.save_button') %>
  </div>
<% end %>

<%= link_to t('profiles.edit.cancel_button'), user_path(@user) %>
