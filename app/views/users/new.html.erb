<h1><%= t('users.new.title') %></h1>

<%= form_with model: @user, local: true do |form| %>
  <%= form.label :username, t('users.new.username_label') %>
  <%= form.text_field :username %>

  <%= form.label :email, t('users.new.email_label') %>
  <%= form.email_field :email %>

  <%= form.label :phone_number, t('users.new.phone_label') %>
  <%= form.text_field :phone_number %>

  <%= form.label :password, t('users.new.password_label') %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation, t('users.new.password_confirmation_label') %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit t('users.new.register_button') %>
<% end %>
