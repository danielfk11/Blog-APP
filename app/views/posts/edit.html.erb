<div style="text-align: center; margin-bottom: 30px;">
  <h2 style="font-size: 24px; color: #333; margin-bottom: 20px;"><%= t('posts.edit.title') %></h2>

  <%= form_with(model: @post, local: true, style: "max-width: 600px; margin: 0 auto;") do |form| %>
    <% if @post.errors.any? %>
      <div style="background-color: #f44336; color: white; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h4 style="margin-top: 0;"><%= t('posts.edit.error_title') %></h4>
        <ul style="list-style-type: none; padding-left: 0;">
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= form.label :title, t('posts.edit.title_label'), style: "display: block; font-weight: bold; color: #333; margin-bottom: 10px;" %>
      <%= form.text_field :title, class: 'form-control', style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :content, t('posts.edit.content_label'), style: "display: block; font-weight: bold; color: #333; margin-bottom: 10px;" %>
      <%= form.text_area :content, class: 'form-control', style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px; height: 200px;" %>
    </div>

    <%= form.submit t('posts.edit.submit_button'), class: 'btn btn-primary', style: "background-color: #1da1f2; color: #fff; padding: 12px 20px; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; transition: background-color 0.3s ease; width: 100%;" %>
  <% end %>
</div>
